/* pages/wifi/wifi.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-top: 0px;
}

.input-info {
  font-size: 15px;
  width: 90%;
  border-bottom: 1px solid grey;
  padding-left: 24px;
  padding-right: 24px;
  padding-bottom: 16px;
  padding-top: 16px;
  display: flex;
  flex-direction: row;
}

.input-button {
  width: 80%;
  margin-top: 100px;
}

.input-title {
  color: grey;
  font-size: 15px;
  text-align: center;
  width: 100%;
  margin-bottom: 10px;
}

.input-sugon {
  color: red;
  font-weight: bold;
  font-size: 50px;
  text-align: center;
  width: 100%;
  margin-bottom: 50px;
}

.wifi-icon {
  width: 18px;
  height: 18px;
  align-self: center;
  margin-right: 16px;
}
