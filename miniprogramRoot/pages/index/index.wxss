/**index.wxss**/

.parent {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.parent-container {
  width: 100%;
  height: 50%;
  position: relative; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 340rpx;
  height: 340rpx;
  border-radius: 50%;
  background: linear-gradient(to bottom, red, orange);
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle-text {
  color: white;
  width: 300rpx;
  font-size: 48rpx;
  background-color: transparent;
}

button::after {
  border: 0px solid rgba(0, 0, 0, 0.2);
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  text-underline-position: above;
  text-decoration: underline;
  /* margin-top: 100px; */
  color: red;
  font-weight: 500;
  font-size: 20px;
}